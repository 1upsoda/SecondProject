<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/firstButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/perple"
        android:text="@string/funny"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/boringTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/firstButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp"
        android:text="@string/funny" />

    <TextView
        android:id="@+id/numberOfKnowledge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/boringTextView"
        android:layout_centerHorizontal="true"
        android:text="@string/stringNumber" />

    <Button
        android:id="@+id/whiteBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textButton"
        android:layout_centerHorizontal="true"
        android:text="@string/whiteBackground" />

    <Button
        android:id="@+id/textButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/knowledge4" />

    <android.widget.TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/messageText"
        android:layout_alignBottom="@+id/messageText"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/message"
        android:text="@string/message"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <android.widget.EditText
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textButton"
        android:layout_below="@+id/whiteBackground"
        android:ems="10" />

    <android.widget.EditText
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/messageText"
        android:layout_below="@+id/messageText"
        android:ems="10"
        android:inputType="phone" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/phoneNumber"
        android:layout_alignBottom="@+id/phoneNumber"
        android:layout_alignParentLeft="true"
        android:text="@string/phoneNumber"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/sendMessage"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/messageText"
        android:text="@string/sendMessageText" />

</RelativeLayout>